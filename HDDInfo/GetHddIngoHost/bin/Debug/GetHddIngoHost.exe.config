<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="HDDInfo.HddInfo" behaviorConfiguration="mexBehavior">
        <endpoint address="HddInfo" binding="basicHttpBinding" contract="HDDInfo.IHddInfo"></endpoint>
        <endpoint address="HddInfo" binding="netTcpBinding" contract="HDDInfo.IHddInfo" ></endpoint>
        <!--для обмена мета-данными между .net-приложениями-->
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000/"/>
            <add baseAddress="net.tcp://localhost:45617/"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehavior">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add type="System.Diagnostics.TextWriterTraceListener" name="TextWriter"
             initializeData="trace.log" />
      </listeners>
    </trace>
  </system.diagnostics>

    
</configuration>