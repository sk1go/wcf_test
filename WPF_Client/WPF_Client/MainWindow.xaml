<Window x:Class="WPF_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hdd Info Service's Client" SizeToContent="WidthAndHeight" >
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" >
            <StackPanel Orientation="Horizontal">
                <Label Content="Host IP" Margin="5,5,5,5" Width="67"/>
                <TextBox Height="22" Margin="5,5,5,5" Width="33" TextAlignment="Center" Text="127" TabIndex="0"/>
                <TextBox Height="22" Margin="5,5,5,5" Width="33" TextAlignment="Center" Text="0" TabIndex="1"/>
                <TextBox Height="22" Margin="5,5,5,5" Width="33" TextAlignment="Center" Text="0" TabIndex="2"/>
                <TextBox Height="22" Margin="5,5,5,5" Width="33" TextAlignment="Center" Text="1" TabIndex="3"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Host port" Margin="5,5,5,5" Width="67"/>
                <TextBox Height="22" Margin="5,5,5,5" Width="45" TextAlignment="Center" Text="12777" />               
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="User name" Margin="5,5,5,5" Width="67"/>
                <TextBox Height="22" Margin="5,5,5,5" Width="160" TextAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Password" Margin="5,5,5,5" Width="67"/>
                <TextBox Height="22" Margin="5,5,5,5" Width="160" TextAlignment="Center" />
            </StackPanel>
            <Button  Margin="5,5,5,5" Content="Log In"/>
        </StackPanel>

    </Grid>
</Window>
